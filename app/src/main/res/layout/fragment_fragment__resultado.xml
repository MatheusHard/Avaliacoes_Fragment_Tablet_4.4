<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Fragment_Resultado">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="#e2d6cc"
       android:orientation="vertical">

       <TextView
           android:id="@+id/textView28"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingTop="20dp"
           android:paddingBottom="20dp"
           android:text="@string/listar_avaliacoes"
           android:textAlignment="center"
           android:textColor="@color/titulo"
           android:textSize="30sp"
           android:textStyle="bold" />

       <TextView

           android:id="@+id/textView35"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:background="#9b928a"
           android:text="@string/cidade"
           android:textAlignment="center"
           android:textColor="@android:color/white"
           android:textSize="20sp" />

       <Spinner
           android:id="@+id/spinnerResultado"
           android:layout_width="match_parent"
           android:layout_height="35dp"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="0dp"
           android:layout_marginRight="10dp"
           />

       <TextView
           android:id="@+id/textView38"
           android:layout_width="match_parent"
           android:layout_height="125dp" />

       <Button
           android:id="@+id/buttonListasAvaliacoes"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:background="#495568"
           android:text="Listar Avaliações"
           android:textColor="@android:color/white"
           />


       <Button
           android:id="@+id/buttonResultado"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:background="#16ce1a"
           android:text="@string/exibir_total"
           android:textColor="@android:color/white" />


   </LinearLayout>

</FrameLayout>